<h1>Edit Course: {{course.title}}</h1>

<form action="/courses/edit" method="POST">
<div class="input-field">
   <input id="title" type="text" name="title" class="validate" value="{{course.title}}" required>
   <label for="title">Course Name</label>
   <span class="helper-text" data-error="Input Course Name"></span>
</div>

<div class="input-field">
   <input id="price" type="number" name="price" class="validate" value = {{course.price}} required min="1">
   <label for="price">Price</label>
   <span class="helper-text" data-error="Input price"></span>
</div>

<div class="input-field">
   <input id="img" type="text" name="img" class="validate" value="{{course.img}}" required>
   <label for="img">URL</label>
   <span class="helper-text" data-error="Input url image"></span>
</div>

<input type="hidden" name="id" value="{{course.id}}">

<button class="btn btn-primary" type="submit">Update Course</button>
</form>
