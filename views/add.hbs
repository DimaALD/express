<h1>Add Courses</h1>

<form action="/add" method="POST">
<div class="input-field">
   <input id="title" type="text" name="title" class="validate" required>
   <label for="title">Course Name</label>
   <span class="helper-text" data-error="Input Course Name"></span>
</div>

<div class="input-field">
   <input id="price" type="number" name="price" class="validate" required min="1">
   <label for="price">Price</label>
   <span class="helper-text" data-error="Input price"></span>
</div>

<div class="input-field">
   <input id="img" type="text" name="img" class="validate" required>
   <label for="img">URL</label>
   <span class="helper-text" data-error="Input url image"></span>
</div>

<button class="btn btn-primary" type="submit">Create Course</button>
</form>
